<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="container" alignment="CENTER" prefHeight="450.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.MainWindowController">
   <children>
      <ImageView fitHeight="200.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Pokemon_logo.png" />
         </image>
      </ImageView>
      <Button fx:id="throwTrainingButton" mnemonicParsing="false" onAction="#enterToThrowTraining" text="Lanzar">
         <font>
            <Font name="Gill Sans MT Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="catchTrainingButton" mnemonicParsing="false" onAction="#enterToCatchTraining" text="Atrapar">
         <font>
            <Font name="Gill Sans MT Bold" size="18.0" />
         </font>
      </Button>
   </children>
</VBox>
